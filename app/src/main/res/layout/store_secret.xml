<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="show"
            type="java.lang.Boolean" />

        <variable
            name="alias"
            type="java.lang.String" />
        <variable
            name="store"
            type="java.lang.Boolean" />
    </data>

    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="@{show ? View.VISIBLE : View.GONE}">


        <Switch
            android:id="@+id/swStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={store}"
            android:text="Store Secret"
            app:layout_constraintBottom_toBottomOf="@+id/etAlias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etAlias" />

        <EditText
            android:id="@+id/etAlias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Alias for your secret"
            android:inputType="textPersonName"
            android:text="@={alias}"
            android:visibility="@{store ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/swStore"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>