<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Execution">

        <SwitchPreferenceCompat
            android:key="@string/preference_save_qr_id"
            android:title="Auto Save QR"
            android:summary="Saves automatically the QR for the stored secrets in internal storage"
            android:icon="@drawable/qr"
            android:defaultValue="true"/>

        <EditTextPreference
            android:key="@string/preference_key_filename"
            android:title="New file's name"
            android:summary="Default name for the new file processed"
            android:defaultValue="@string/preference_filename_default"
            android:dialogTitle="Set the file's name"
            android:icon="@drawable/file_name"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Display Settings">


        <SwitchPreferenceCompat
            android:key="@string/preference_key_theme"
            android:title="Dark Theme"
            android:summary="Enable dark colors for the application."
            android:icon="@drawable/night_theme"/>


        <DropDownPreference
            android:key="@string/preference_date_format_id"
            android:title="@string/preference_date_format_title"
            android:entries="@array/date_format"
            android:summary="%s"
            android:entryValues="@array/date_format"
            android:icon="@drawable/date"/>

    </PreferenceCategory>



    <PreferenceCategory
        android:title="Help">

        <Preference
            app:key="@string/preference_help_id"
            app:title="Frequent Questions and Answers"
            app:summary="Take a look at how to use the application in its GitHub repository help page."
            android:icon="@drawable/help"
            style="@styles/IconTheme"/>

    </PreferenceCategory>


</PreferenceScreen>
