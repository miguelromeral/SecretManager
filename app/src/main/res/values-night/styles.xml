<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#cf69ff</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_night</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


    <style name="IconTheme">
        <item name="android:tint">#fff</item>
    </style>


    <style name="backgroundStyle">
        <item name="android:background">#070707</item>
    </style>



    <style name="mySwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="myButton" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple</item>
    </style>

    <style name="myTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextOutput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:ems">10</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="myFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:focusable">true</item>
        <item name="tint">@color/colorAccent</item>
    </style>

    <style name="threeDotsText">
        <item name="android:layout_width">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/secret_options_text</item>
    </style>

    <style name="myCardView">
        <item name="cardBackgroundColor">@color/almost_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="myEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>


